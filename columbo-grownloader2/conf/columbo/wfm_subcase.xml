<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:batch="http://www.springframework.org/schema/batch"
       xmlns:task="http://www.springframework.org/schema/task"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
                           http://www.springframework.org/schema/batch http://www.springframework.org/schema/batch/spring-batch-2.1.xsd
                           http://www.springframework.org/schema/task http://www.springframework.org/schema/task/spring-task-3.1.xsd">
    <!--

        WFM_SUBCASE.

    -->
    <!--
        State helper.
    -->
    <bean id="wfmSubcaseStateHelper" class="eu.artofcoding.grownloader2.StateHelper">
        <property name="tableName" value="wfm_subcase"/>
        <property name="dataSource" ref="systemDataSource"/>
    </bean>
    <!--
        Reader
    -->
    <bean id="wfmSubcaseItemReader" class="org.springframework.batch.item.database.JdbcCursorItemReader">
        <property name="dataSource" ref="columboSourceDataSource"/>
        <property name="sql"
                  value="SELECT subcase_id, subcase_tracking_id, case_accountability_id, action_type, open_date, date_modified, x_repair_class, x_otc, partner_co_name, delivery_alternative WHERE date_modified BETWEEN TO_DATE(?, 'DD.MM.YYYY HH24:MI:SS') AND TO_DATE(?, 'DD.MM.YYYY HH24:MI:SS')"/>
        <property name="preparedStatementSetter">
            <bean id="table2DateModifiedStatementSetter"
                  class="eu.artofcoding.grownloader2.columbo.PairedDateStatementSetter">
                <property name="stateHelper" ref="wfmSubcaseStateHelper"/>
            </bean>
        </property>
        <property name="rowMapper">
            <bean id="wfmSubcaseItemReaderRowMapper"
                  class="eu.artofcoding.grownloader2.columbo.entity.WfmSubcaseRowMapper"/>
        </property>
        <property name="fetchSize" value="10000"/>
    </bean>
    <!--
        Writer
    -->
    <bean id="wfmSubcaseItemWriter" class="org.springframework.batch.item.database.JdbcBatchItemWriter">
        <property name="dataSource" ref="columboDestinationDataSource"/>
        <property name="itemSqlParameterSourceProvider">
            <bean class="org.springframework.batch.item.database.BeanPropertyItemSqlParameterSourceProvider"/>
        </property>
        <property name="sql"
                  value="INSERT INTO wfm_subcase (subcase_id, subcase_tracking_id, case_accountability_id, action_type, open_date, date_modified, x_repair_class, x_otc, partner_co_name, delivery_alternative) VALUES (:subcaseId, :subcaseTrackingId, :caseAccountabilityId, :actionType, :openDate, :dateModified, :xRepairClass, :xOtc, :partnerCoName, :deliveryAlternative)"/>
    </bean>
    <!--
        Job
    -->
    <batch:job id="wfmSubcaseJob" incrementer="dynamicJobParameters" restartable="true">
        <batch:listeners>
            <batch:listener ref="systemErrorExecutionLister"/>
        </batch:listeners>
        <!-- Create destination table -->
        <batch:step id="wfmSubcaseCreateDestinationTableStep" next="wfmSubcaseReadAndWriteStep">
            <batch:tasklet>
                <bean id="wfmSubcaseTableCreator" class="eu.artofcoding.grownloader2.columbo.TableCreator">
                    <property name="schemaName" value="stage1"/>
                    <property name="tableName" value="wfm_subcase"/>
                    <property name="procedureName" value="stage1.p_create_wfm_subcase"/>
                    <property name="dataSource" value="columboDestinationDataSource"/>
                </bean>
            </batch:tasklet>
        </batch:step>
        <!-- Read data from source table and write to destination table (stage1) -->
        <batch:step id="wfmSubcaseReadAndWriteStep" next="wfmSubcaseMergeDataStep">
            <batch:tasklet>
                <batch:chunk reader="wfmSubcaseItemReader"
                             writer="wfmSubcaseItemWriter"
                             commit-interval="10000"/>
            </batch:tasklet>
        </batch:step>
        <!-- Merge data from stage1 into stage2 -->
        <batch:step id="wfmSubcaseMergeDataStep" next="wfmSubcaseRecordStateStep">
            <batch:tasklet>
                <bean id="wfmSubcaseMergeIntoStage2" class="eu.artofcoding.grownloader2.columbo.Stage2Merger">
                    <property name="tableName" value="wfmSubcase"/>
                    <property name="dataSource" ref="columboDestinationDataSource"/>
                </bean>
            </batch:tasklet>
        </batch:step>
        <!-- Record successful download -->
        <batch:step id="wfmSubcaseRecordStateStep">
            <batch:tasklet>
                <bean id="wfmSubcaseRecordState" class="eu.artofcoding.grownloader2.DownloadStateRecorder">
                    <property name="stateHelper" ref="wfmSubcaseStateHelper"/>
                </bean>
            </batch:tasklet>
        </batch:step>
    </batch:job>
    <!--
        Scheduler
    -->
    <bean id="wfmSubcaseSchedulingLauncher" class="eu.artofcoding.grownloader2.SpringSchedulingLauncher">
        <property name="job" ref="wfmSubcaseJob"/>
        <property name="jobLauncher" ref="jobLauncher"/>
    </bean>
    <task:scheduled-tasks>
        <!-- Start job 'fixed-delay' seconds after completion of previous job. -->
        <task:scheduled ref="wfmSubcaseSchedulingLauncher" method="launch" fixed-delay="10000"/>
    </task:scheduled-tasks>
</beans>
