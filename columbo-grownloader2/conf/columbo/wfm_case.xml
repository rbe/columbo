<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:batch="http://www.springframework.org/schema/batch"
       xmlns:task="http://www.springframework.org/schema/task"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
                           http://www.springframework.org/schema/batch http://www.springframework.org/schema/batch/spring-batch-2.1.xsd
                           http://www.springframework.org/schema/task http://www.springframework.org/schema/task/spring-task-3.1.xsd">
    <!--

        WFM_CASE.

    -->
    <!--
        State helper.
    -->
    <bean id="wfmCaseStateHelper" class="eu.artofcoding.grownloader2.StateHelper">
        <property name="tableName" value="wfm_case"/>
        <property name="dataSource" ref="systemDataSource"/>
    </bean>
    <!--
        Reader
    -->
    <bean id="wfmCaseItemReader" class="org.springframework.batch.item.database.JdbcCursorItemReader">
        <property name="dataSource" ref="columboSourceDataSource"/>
        <property name="sql"
                  value="SELECT accountability_id, case_id, customer_site_id, date_modified, selected_offer_id WHERE date_modified BETWEEN TO_DATE(?, 'DD.MM.YYYY HH24:MI:SS') AND TO_DATE(?, 'DD.MM.YYYY HH24:MI:SS')"/>
        <property name="preparedStatementSetter">
            <bean id="table2DateModifiedStatementSetter"
                  class="eu.artofcoding.grownloader2.columbo.PairedDateStatementSetter">
                <property name="stateHelper" ref="wfmCaseStateHelper"/>
            </bean>
        </property>
        <property name="rowMapper">
            <bean id="wfmCaseItemReaderRowMapper" class="eu.artofcoding.grownloader2.columbo.entity.WfmCaseRowMapper"/>
        </property>
        <property name="fetchSize" value="10000"/>
    </bean>
    <!--
        Writer
    -->
    <bean id="wfmCaseItemWriter" class="org.springframework.batch.item.database.JdbcBatchItemWriter">
        <property name="dataSource" ref="columboDestinationDataSource"/>
        <property name="itemSqlParameterSourceProvider">
            <bean class="org.springframework.batch.item.database.BeanPropertyItemSqlParameterSourceProvider"/>
        </property>
        <property name="sql"
                  value="INSERT INTO wfm_case (accountability_id, case_id, customer_site_id, date_modified, selected_offer_id) VALUES (:accountabilityId, :caseId, :customerSiteId, :dateModified, :selectedOfferId)"/>
    </bean>
    <!--
        Job
    -->
    <batch:job id="wfmCaseJob" incrementer="dynamicJobParameters" restartable="true">
        <batch:listeners>
            <batch:listener ref="systemErrorExecutionLister"/>
        </batch:listeners>
        <!-- Create destination table -->
        <batch:step id="wfmCaseCreateDestinationTableStep" next="wfmCaseReadAndWriteStep">
            <batch:tasklet>
                <bean id="wfmCaseTableCreator" class="eu.artofcoding.grownloader2.columbo.TableCreator">
                    <property name="schemaName" value="stage1"/>
                    <property name="tableName" value="wfm_case"/>
                    <property name="procedureName" value="stage1.p_create_wfm_case"/>
                </bean>
            </batch:tasklet>
        </batch:step>
        <!-- Read data from source table and write to destination table (stage1) -->
        <batch:step id="wfmCaseReadAndWriteStep" next="wfmCaseMergeDataStep">
            <batch:tasklet>
                <batch:chunk reader="wfmCaseItemReader"
                             writer="wfmCaseItemWriter"
                             commit-interval="10000"/>
            </batch:tasklet>
        </batch:step>
        <!-- Merge data from stage1 into stage2 -->
        <batch:step id="wfmCaseMergeDataStep" next="wfmCaseRecordStateStep">
            <batch:tasklet>
                <bean id="wfmCaseMergeIntoStage2" class="eu.artofcoding.grownloader2.columbo.Stage2Merger">
                    <property name="tableName" value="wfmCase"/>
                    <property name="dataSource" ref="columboDestinationDataSource"/>
                </bean>
            </batch:tasklet>
        </batch:step>
        <!-- Record successful download -->
        <batch:step id="wfmCaseRecordStateStep">
            <batch:tasklet>
                <bean id="wfmCaseRecordState" class="eu.artofcoding.grownloader2.DownloadStateRecorder">
                    <property name="stateHelper" ref="wfmCaseStateHelper"/>
                </bean>
            </batch:tasklet>
        </batch:step>
    </batch:job>
    <!--
        Scheduler
    -->
    <bean id="wfmCaseSchedulingLauncher" class="eu.artofcoding.grownloader2.SpringSchedulingLauncher">
        <property name="job" ref="wfmCaseJob"/>
        <property name="jobLauncher" ref="jobLauncher"/>
    </bean>
    <task:scheduled-tasks>
        <!-- Start job 'fixed-delay' seconds after completion of previous job. -->
        <task:scheduled ref="wfmCaseSchedulingLauncher" method="launch" fixed-delay="10000"/>
    </task:scheduled-tasks>
</beans>
